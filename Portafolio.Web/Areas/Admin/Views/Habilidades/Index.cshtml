
@{
    ViewBag.Title = "Habilidades obtenidas";
    List<Habilidad> habilidades = ViewBag.Habilidades;
}

<div id="habilidades" class="page">

    <h1 class="page-header remove-margin">
        <a class="btn btn-primary pull-right" href="~/admin/habilidades/crud">Agregar</a>
        @ViewBag.Title
    </h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Habilidad</th>
                <th>Nivel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in habilidades)
            {
                <tr>
                    <td>
                        <a href="~/admin/habilidades/crud?&id=@item.id">@item.Nombre</a>
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@(item.Dominio)" aria-valuemin="0" aria-valuemax="100" style="width:@(item.Dominio)%;">
                                @(item.Dominio.ToString())%
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

